
@using Common.DTOs

@model FormDTOCollection

@{
    ViewBag.Title = "Home Page";
}

<style>
    .page-body {
        min-height: 500px;
        margin: 0px auto 0 auto;
        background-color: White;
        -moz-box-shadow: 1px 1px 1px 2px rgba(128, 128, 128, 0.274);
        -webkit-box-shadow: 1px 1px 1px 2px rgba(128, 128, 128, 0.26);
        box-shadow: 1px 1px 2px grey;
        overflow: hidden;
        border-radius: 20px;
        padding: 80px;
    }

    .date {
        font-size: 12px;
        color: gray;
    }

    .title {
        font-size: 16px;
        color: black;
    }

    .title-column {
        padding: 30px 10px;
    }

    .background-form {
        background-color: rgb(231, 231, 231);
        height: 100px;
        border-radius: 20px;
        margin: 20px;
        padding: 25px;
    }
</style>


<div class="page-body">

    <div class="row ">
        <div>
            <p class="p-3 mb-2 bg-info text-white border border-primary rounded">Welcome to the form-builder version 1.2. You can create and edit forms using drag-and-drop functionality with the controls below. Click on "Add Form" to create a new form, or manage existing forms from the table below.</p>
        </div>
        <button type="button" class="btn btn-dark p-2 my-3">Add Form</button>
    </div>
    <h3 class="text-dark ml-2 ">Form List</h3>
    @if (!(Model.FormCollectionDTOs is null))
    {
        <table>
            <tbody>
                @foreach (var index in Model.FormCollectionDTOs)
                {
                <tr class="background-form row">
                    <td class="col-5">
                        <span class="title">@index.FormName</span>
                        <br>
                        <span class="date">8 years ago</span>
                    </td>
                    <td class="col-7 my-1">
                        <div>
                            <button class="btn btn-primary">Edit Form</button>
                            <button class="btn btn-success ">ViewFill Form</button>
                            <button class="btn btn-info">View Submission</button>
                            <button class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Delete</button>
                        </div>
                    </td>
                </tr>


                }
            </tbody>
        </table>
    }
</div>
</div>


